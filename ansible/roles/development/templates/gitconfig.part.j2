[branch]
  sort = version:refname
[column]
  ui = auto
[push]
  autoSetupRemote = true
  followTags = true
[fetch]
  prune = true
  pruneTags = true
  all = true
[diff]
  colorMoved = default
[merge]
  conflictstyle = zdiff3
[rerere]
  enabled = true
  autoupdate = true
[rebase]
  autoStash = true

{% if git_delta_enabled %}

[include]
  path = ~/.gitconfig-delta
[core]
  pager = delta

[interactive]
  diffFilter = delta --color-only

[delta]
  side-by-side = false
  line-numbers = true
  navigate = true  # use n and N to move between diff sections
  features = mystyle decorations line-numbers

[delta "mystyle"]
  hunk-header-style = omit
  minus-style = red
  plus-style = green
  syntax-theme = none

[delta "decorations"]
  commit-decoration-style = yellow
  file-style = bold
  file-decoration-style = none

[delta "line-numbers"]
  line-numbers-left-style = cyan
  line-numbers-right-style = cyan
  line-numbers-minus-style = 124
  line-numbers-plus-style = 28


{% endif %}
# vim: syntax=gitconfig
