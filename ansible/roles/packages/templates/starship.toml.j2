add_newline = false
format = """$username$hostname:$directory $git_branch$git_status$character"""

[directory]
truncation_length = 3
truncation_symbol = ".../"
truncate_to_repo = false
format = """[$path]($style)[$read_only]($read_only_style)"""

[fill]
symbol = " "

[username]
style_user = "green"
style_root = "red bold"
format = """[$user]($style)[@](white)"""
show_always = true

[hostname]
ssh_only = false
format = """$hostname"""

[character]
success_symbol = """\\$"""
error_symbol = """[\\$](red)"""

[git_branch]
format = """[$symbol$branch]($style)"""
style="purple"

[git_status]
format = '([\[$all_status$ahead_behind\]]($style))'

