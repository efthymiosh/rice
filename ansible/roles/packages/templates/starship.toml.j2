add_newline = false
format = """$fill$all $directory$character"""

[directory]
truncation_length = 3
truncation_symbol = ".../"
truncate_to_repo = false

[fill]
symbol = " "

[username]
style_user = "green"
style_root = "red bold"
format = """[$user]($style)[@](white)"""
disabled = false
show_always = true

[hostname]
ssh_only = false
format = """$hostname """
disabled = false

