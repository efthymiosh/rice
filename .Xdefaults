! change to urxvt-unicode for different kinds of headaches
! ..if so, disable the home/end modifications.
! URxvt*termName: xterm
! URxvt*keysym.Home:		\033OH
! URxvt*keysym.End:		\033OF

! enable blinking cursor
URxvt*cursorBlink: false
! true:line cursor / false: block cursor
URxvt*cursorUnderline: false
! set transparency
URxvt*transparent: false
URxvt*inheritPixmap: false
! remove borders on edge
URxvt*borderLess: false
URxvt*externalBorder: 0
URxvt*internalBorder: 0
! set urgency when bell rings
URxvt*urgentOnBell: true


! set to refresh terminal on 60fps. unset to refresh asap
URxvt*skipScroll: true
! double buffering for xft fonts
URxvt*buffered: true
URxvt*skipBuiltinGlyphs: true

! enable recognition and opening of links
URxvt*perl-ext-common: default,matcher
URxvt*matcher.button: 1
URxvt*urlLauncher: firefox

! tint with any color; i.e., blue, red, tomato4, olivedrab2, etc.
!   some nice listings are at:
!     http://www.nisrv.com/drupal/?q=node/11
!     http://www.htmlgoodies.com/tutorials/colors/article.php/3478921
! URxvt*tintColor: Default

! shading - 0 to 99 darkens, 101 to 200 lightens.
!   Dont use with tintColor; just use a darker or lighter color instead.
!URxvt*shading: 40

! scrollback buffer lines - 65535 is max on most machines (64 is default)
URxvt*saveLines: 4096

! Xft: DejaVu fonts
URxvt*font: xft:DejaVu Sans Mono:pixelsize=13:antialias=true:hinting=true
URxvt*boldFont: xft:DejaVu Sans Mono:bold:pixelsize=13:antialias=true:hinting=true
URxvt*letterSpace: -1
URxvt*lineSpace: 0

! scrollbar - true (default) or false
URxvt*scrollBar: false

! scrollbar position - left=false (default) or right=true
URxvt*scrollBar_right: false

! scrollbar style - rxvt (default), plain, next, or URxvt
URxvt*scrollstyle: plain

